MainTab:CreateButton("Send Credit Message", function()
    local message = "Made by Neko Hub V3, .ǥǥ⸝Ƈ❷ḢɈḣẆḞ৭ƙƙ"
    local ReplicatedStorage = game:GetService("ReplicatedStorage")

    local ok, events = pcall(function()
        return ReplicatedStorage:WaitForChild("DefaultChatSystemChatEvents", 5)
    end)

    if ok and events and events:FindFirstChild("SayMessageRequest") then
        -- sends via default chat (shows in global chat)
        pcall(function() events.SayMessageRequest:FireServer(message, "All") end)
    else
        -- fallback: local humanoid chat (visible to nearby players)
        local plr = Players.LocalPlayer
        if plr and plr.Character then
            local humanoid = plr.Character:FindFirstChildOfClass("Humanoid")
            if humanoid then
                pcall(function() humanoid:Chat(message) end)
            end
        end
    end
end)
